<?xml version='1.0' encoding='utf-8'?>
<widget id="br.org.labhacker.agendapublica" version="0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Agenda Pública</name>
    <description>
        Agregador de eventos públicos da cidade de São Paulo
    </description>
    <author email="lab@labhacker.org.br" href="http://labhacker.org.br">
        LabHacker
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-hdpi" src="res/android/HDPI.png" />
        <splash density="port-ldpi" src="res/android/LDPI.png" />
        <splash density="port-mdpi" src="res/android/MDPI.png" />
        <splash density="port-xhdpi" src="res/android/XHDPI.png" />
        <icon density="mdpi" src="res/android/ico-MDPI.png" />
        <icon density="hdpi" src="res/android/ico-HDPI.png" />
        <icon density="xhdpi" src="res/android/ico-XHDPI.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="BackgroundColor" value="0xffffd700" />
    <preference name="backgroundColor" value="0xffffd700" />
    <preference name="SplashScreenBackgroundColor" value="0xffffd700" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="250" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.8" />
    <plugin name="cordova-plugin-appversion" spec="~1.0.0" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
</widget>
