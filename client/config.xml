<?xml version='1.0' encoding='utf-8'?>
<widget id="br.org.labhacker.agendapublica" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Agenda Pública</name>
    <description>
        Agenda Pública
    </description>
    <author email="lab@labhacker.org.br" href="http://labhacker.org.br">
        LabHacker
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <splash src="res/android/HDPI.png" density="port-hdpi"/>
        <splash src="res/android/LDPI.png" density="port-ldpi"/>
        <splash src="res/android/MDPI.png" density="port-mdpi"/>
        <splash src="res/android/XHDPI.png" density="port-xhdpi"/>
        
        <icon src="res/android/ico-MDPI.png" density="mdpi" />
        <icon src="res/android/ico-HDPI.png" density="hdpi" />
        <icon src="res/android/ico-XHDPI.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="BackgroundColor" value="0xffffd700" />
    <preference name="backgroundColor" value="0xffffd700" />
    <preference name="SplashScreenBackgroundColor" value="0xffffd700" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
